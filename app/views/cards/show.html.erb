        <div class="card <%= @card.rarity %>">
          <div class="art">
            <%= image_tag card_path(@card.number) %>
          </div>
          <div class="main-line">
            <div class="power-bg">
              <%= image_tag image_url('power.png') %>
              <div class="power">
                <%= @card.power %>
              </div>
            </div>
            <div class="name">
              <%= @card.name %>
            </div>
            <div class="damage-bg">
              <%= image_tag image_url('damage.png') %>
              <div class="damage">
                <%= @card.damage %>
              </div>
            </div>
          </div>
          <div class="stats">
            <div class="ability">
              <%= @card.ability %>
            </div>
            <div class="bonus">
              <%= @card.bonus %>
            </div>
          </div>
        </div>
