<div class="container page-container">
  <div class="row">
    <%= form_tag(decks_path, :method => "get", remote: true, id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Например, 'арпада' или 'ивент'..." %>
        <%= submit_tag "Поиск", :name => nil, id: "search-button" %>
  <% end %>
    <div id="decks-loader"></div>
    <div id="no-results"></div>
    <table class="table table-inverse decks-table">
      <%= render 'deck_table' %>
    </table>
    <div class="bottom-line">
      <div class="paginator" id="decks-paginator">
        <%= paginate @decks, remote: true %>
      </div>
    </div>
  </div>
</div>
